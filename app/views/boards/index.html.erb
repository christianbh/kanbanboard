<h1>Kanban Boards</h1>

<div class="wrapper">
	<div class="centre">

<% for board in @boards %>
	<div class="roundedcornr_box">
		<div class="roundedcornr_content">
    	<div class="left"><strong><%= link_to board.name, board %></strong> </div>
		<div class="right"> <%= button_to 'Delete', board, :confirm => 'This will delete the board. Are you sure?', :method => :delete %></div>
		<div style="clear:right"></div>
		</div>
	</div>

<% end %>
	</div>
</div>

<%= link_to "Add New Board", new_board_path %> | <%= link_to "Calendar Events", events_path %><br/>

<div class="calendar" id="my-timeline"></div>
