<h1>Listing events</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Details</th>
    <th>Start</th>
    <th>End</th>
    <th>Span</th>
  </tr>

<% for event in @events %>
  <tr>
    <td><%=h event.title %></td>
    <td><%=h event.details %></td>
    <td><%=h event.start %></td>
    <td><%=h event.end %></td>
    <td><%=h event.span %></td>
    <td><%= link_to 'Show', event %></td>
    <td><%= link_to 'Edit', edit_event_path(event) %></td>
    <td><%= link_to 'Destroy', event, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

